# Caminho para o arquivo de credenciais do Google
GOOGLE_CREDENTIALS_PATH=credentials.json

# Configurações do Flask (se aplicável)
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=1

# Configuração do fuso horário
TZ=America/Sao_Paulo

# URL da planilha do Google Sheets
SHEET_URL=https://docs.google.com/spreadsheets/d/11N_M2EDoSP7N9ULJl8qgiWp2H22j9cXNSjR1AYt2cos/edit?usp=sharing

# Intervalo padrão para leitura do Google Sheets
GOOGLE_SHEETS_RANGE=Sheet1!A1:Z1000

# Configuração de atualizações automáticas
UPDATE_INTERVAL=300

# Configuração de re-tentativas
GOOGLE_SHEETS_MAX_RETRIES=3
GOOGLE_SHEETS_RETRY_DELAY=5

# Configuração de cache
GOOGLE_SHEETS_CACHE_TIMEOUT=300
GOOGLE_SHEETS_BATCH_SIZE=1000

# Formato de data
DATE_FORMAT=%d/%m/%Y %H:%M:%S

# Horários padrão
DEFAULT_START_TIME=00:00:00
DEFAULT_END_TIME=23:59:59.999999
